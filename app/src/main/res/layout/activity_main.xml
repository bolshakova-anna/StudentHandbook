<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="К СОДЕРЖАНИЮ"
            android:layout_width="326dp"
            android:layout_height="118dp" android:id="@+id/button"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toBottomOf="@+id/helloString"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_background"
            />
    <ImageView
            android:layout_width="325dp"
            android:layout_height="267dp"
            app:srcCompat="@drawable/dog2" android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp" app:layout_constraintBottom_toTopOf="@+id/helloString"/>
    <TextView
            android:text="STUDENT'S HANDBOOK"
            android:layout_width="0dp"
            android:layout_height="100dp" android:id="@+id/helloString"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button" android:textAllCaps="true"
            android:textColor="#070707"
            android:textColorHighlight="#000000" app:layout_constraintVertical_bias="0.453"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="sans-serif"
            android:focusableInTouchMode="false" android:fitsSystemWindows="false"
            android:filterTouchesWhenObscured="false" android:fadeScrollbars="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
    />
</androidx.constraintlayout.widget.ConstraintLayout>